{
  "manifest_version": 3,
  "name": "ChatCapture",
  "version": "0.1.0",
  "description": "A browser extension to export ChatGPT conversations to PDF.",
  "icons": {
    "48": "images/icons/icon-48.png",
    "96": "images/icons/icon-96.png"
  },
  "permissions": [
    "tabs",
    "downloads",
    "https://chat.openai.com/*",
		"scripting"
  ],
  "action": {
    "default_icon": {
      "48": "images/icons/icon-48.png"
    },
    "default_title": "ChatCapture",
    "default_popup": "popup.html"
  }
}
